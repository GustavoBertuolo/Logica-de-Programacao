#include <stdio.h>
 
int main() {
 
    double salariofixo, vendas, salariofinal;
    char nome;
    
    scanf("%s", &nome);
    scanf("%lf", &salariofixo);
    scanf("%lf", &vendas);
  
    salariofinal = salariofixo + vendas * 0.15;
    
    printf("TOTAL = R$ %.2lf\n", salariofinal);
 
    return 0;
}

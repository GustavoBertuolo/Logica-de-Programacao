#include <stdio.h>
int main() 
{
    int N, i; 
    double notas[3]={0, 0, 0}, media;

    scanf("%d", &N);
    for(i=0; i<N; i++)
    {
        scanf("%lf%lf%lf", &notas[0], &notas[1], &notas[2]);
        media=(notas[0]*2 + notas[1]*3 + notas[2]*5)/10;
        printf("%.1lf\n", media);
    }

    return 0;
}

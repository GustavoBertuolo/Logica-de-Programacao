#include <stdio.h>
 
int main() {
 
    int codigoA, quantidadeA, codigoB, quantidadeB;
    double precoA, precoB, valortotal;
    
    scanf("%d %d %lf", &codigoA, &quantidadeA, &precoA);
    scanf("%d %d %lf", &codigoB, &quantidadeB, &precoB);
    
    valortotal = precoA * quantidadeA + precoB * quantidadeB;
 
    printf("VALOR A PAGAR: R$ %.2lf\n", valortotal);
    
    return 0;
}
